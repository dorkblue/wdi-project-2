<link rel="stylesheet" href="/css/style.css">

<form action="/item/edit" method="POST" id="editform">
    <h3><label>Edit item</label></h3>
    <% foundItem.forEach(function(item, index) {%>
    <div class="form-group">
      <input type="text" class="form-control" id="title" placeholder="Title" name="title" value="<%= item.title %>" autofocus="autofocus">
    </div>

    <div class="form-group">

      <textarea name="description" form="editform" id="description"> <%= item.description %> </textarea>

    </div>

    <div class="form-group">
      <input type="text" class="form-control" id="tag" placeholder="Tag" name="tag" value="<%= item.tag %>">
    </div>
    <input type="hidden" name="item_id" value="<%= item._id%>" />
    <input type="submit"></input>
  </form>
        <% }) %>
